package {
    default_applicable_licenses: ["Android-Apache-2.0"],
}

// NCI Configuration
//ALLOW_MISSING_DEPENDENCIES = ["true"]
android_app {
    name: "NQNfcNci",
    overrides: ["NfcNci"],
    system_ext_specific: true,
    srcs: [
        "src/**/*.java",
        "nci/**/*.java",
        ":statslog-Nfc-java-gen",
    ],
    uses_libs: ["com.nxp.nfc.nq"],
    platform_apis: true,
    certificate: "platform",
    jni_libs: ["libsn100nfc_nci_jni"],
    libs: [
        // order matters: classes in framework-nfc are resolved before framework, meaning
        // @hide APIs in framework-nfc are resolved before @SystemApi stubs in framework
        "framework-nfc.impl",
        "framework",

        "com.nxp.nfc.nq"
    ],
    static_libs: [
        "android.se.omapi-V1-java",
        "androidx.annotation_annotation",
        "androidx.appcompat_appcompat",
        "com.google.android.material_material",
        "android.hardware.secure_element-V1.0-java",
        "vendor.nxp.hardware.nfc-V2.0-java",
        "PlatformProperties",
    ],
    optimize: {
        proguard_flags_files: ["proguard.flags"],
    },
    jarjar_rules: "jarjar-rules.txt",
}

filegroup {
    name: "nqnfc-sources",
    srcs: [
        "src/**/*.java",
        ":statslog-Nfc-java-gen",
    ],
    visibility: [
        "//vendor/nxp/opensource/commonsys/packages/apps/Nfc/tests/unit",
    ],
}
